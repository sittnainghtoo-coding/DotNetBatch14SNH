@model List<BlogModel>
@{
    int count = 0;
}

<table class="table table-bordered">
    <thead>
        <tr>
            <th></th>
            <th>No.</th>
            <th>Title</th>
            <th>Author</th>
            <th>Content</th>


        </tr>
    </thead>
    <tbody>
       


    </tbody>
</table>

@section scripts{
    <script>
		$(document).ready(function () {
			$.ajax({
				url: '/BlogAjax/GetBlogs',
				type: 'GET',
				success: function (data) {
					console.log({ data });
					let count = 0;

					let rows = "";
					for (let i = 0; i < data.length; i++) {
						let item = data[i];

						let row = `
									<tr>
										<td>
											<a class="btn btn-outline-warning" href="/Blog/Edit/${item.BlogId}">Edit</a>
											<button class="btn btn-outline-danger btn-delete" type="button" data-id="${item.BlogId}">Delete</button>
										</td>
										<td>${++count}</td>
										<td>${item.BlogTitle}</td>
										<td>${item.BlogAuthor}</td>
										<td>${item.BlogContent}</td>
									</tr>
								`;
						rows += row;
					}

					$('#tbDataTable').html(rows);
					bindDeleteButton();
				},
				error: function (ex) {
