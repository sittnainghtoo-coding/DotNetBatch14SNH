@model List<BlogModel>
@{
    int count = 0;
}

<table class="table table-bordered">
    <thead>
        <tr>
            <th></th>
            <th>No.</th>
            <th>Title</th>
            <th>Author</th>
            <th>Content</th>
           

        </tr>
    </thead>
    <tbody>
        @foreach (var blog in Model)
        {
            <tr>
                <td><a href="/Blog/Edit/@blog.BlogId">Edit</a>
                    <a href="/Blog/Delete/@blog.BlogId">Delete</a>
                </td>

                <td>@(++count)</td>
                <td>@blog.BlogTitle</td>
                <td>@blog.BlogAuthor</td>
                <td>@blog.BlogContent</td>


            </tr>
        }


    </tbody>
</table>

