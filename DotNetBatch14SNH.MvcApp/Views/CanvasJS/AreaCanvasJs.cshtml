@model AreaCanvasJsModel
@using Newtonsoft.Json;

<div id="areaChartContainer" style="height: 370px; width: 100%;"></div>

@section scripts {
    <script>
        var chart = new CanvasJS.Chart("areaChartContainer", {
            animationEnabled: true,
            title: {
                text: "Area Chart Example"
            },
            axisY: {
                title: "Earnings"
            },
            data: [{
                type: "area",
                dataPoints: @Html.Raw(JsonConvert.SerializeObject(Model.Data.Zip(Model.Categories, (value, category) => new { y = value, label = category })))
            }]
        });
        chart.render();
    </script>
}
